<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp">
<TextView
        android:textSize="@dimen/sp12"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_paper_item_type"
        android:gravity="center"
        android:textColor="@color/chart_green"
        android:text="Long"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:textColor="@color/chart_highlight"
                android:id="@+id/tv_paper_name"
                android:textSize="@dimen/sp14"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="USD/EUR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_paper_lot"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_paper_name"
                android:textSize="@dimen/sp12"
                android:textColor="@color/chart_text_minor"
                android:text="0.1 lot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tv_paper_lot"
                android:textSize="@dimen/sp14"
                android:textColor="@color/chart_green"
                android:text="+14.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_paper_buy"
                android:textColor="@color/chart_prompt"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/sp14"
                android:layout_below="@+id/tv_paper_name"
                android:text="@string/buying_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_paper_buy"
                android:text="64.22"
                android:textSize="@dimen/sp16"
                android:id="@+id/tv_paper_buy_value"
                android:textColor="@color/chart_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_paper_lie"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/tv_paper_buy"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="#f5f5f5"
                android:layout_below="@+id/tv_paper_name"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_toRightOf="@+id/tv_paper_lie"
                android:id="@+id/tv_paper_current"
                android:textColor="@color/chart_prompt"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/sp14"
                android:layout_below="@+id/tv_paper_name"
                android:text="@string/current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_toRightOf="@+id/tv_paper_lie"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_paper_buy"
                android:text="64.22"
                android:textSize="@dimen/sp16"
                android:id="@+id/tv_paper_current_value"
                android:textColor="@color/chart_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_paper_close_rise"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                 android:gravity="center"
                android:text="@string/close"
                android:layout_width="60dp"
                android:layout_height="25dp"/>
    </RelativeLayout>
</LinearLayout>