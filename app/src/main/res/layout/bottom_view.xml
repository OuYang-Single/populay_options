<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
    <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="80dp">
        <TextView
                android:id="@+id/tv_chart_bottom_view_text"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp20"
                android:textStyle="bold"
                android:textColor="@color/chart_highlight"
                android:text="GDLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_chart_bottom_view_type"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="BUY"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/chart_bottom_view_tabs"
            android:textSize="14sp"
            app:tabTextColor="@color/chart_prompt"
            android:layout_width="match_parent"
            app:tabIndicatorColor="@color/chart_table_line"
            app:tabSelectedTextColor="@color/chart_table_line"
            app:tabRippleColor="@color/white"
            android:layout_height="60dp"
            android:background="@color/white"/>
<View
        android:background="@color/chart_prompt"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
            android:id="@+id/ilayout_chart_bottom_view_price"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp14"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/input_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/img_chart_bottom_view_add"
                    android:src="@mipmap/ic_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/edit_chart_bottom_view_price"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp14"
                    android:text="1"
                    android:textColor="@color/chart_text_minor"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/img_chart_bottom_view_minus"
                    android:src="@mipmap/ic_minus"
                    android:layout_marginRight="200dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </LinearLayout>
        <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />
    </LinearLayout>

    <TextView
            android:textColor="@color/chart_text_minor"
            android:textSize="@dimen/sp14"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="@string/lots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_chart_bottom_tag_view_type_1"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_chart_bottom_tag_view_type_2"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_chart_bottom_tag_view_type_3"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="5"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_chart_bottom_tag_view_type_4"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="10"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.volley.library.flowtag.FlowTagLayout
            android:visibility="gone"
            android:id="@+id/ftag_chart_bottom_view_lots"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f5f5f5" />


        <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp14"
                android:text="@string/margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_chart_bottom_tag_view_type_5"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="100"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_chart_bottom_tag_view_type_6"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="160"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_chart_bottom_tag_view_type_7"
                android:background="@drawable/chart_bottom_view_buy"
                android:text="240"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
        <com.volley.library.flowtag.FlowTagLayout
                android:visibility="gone"
                android:id="@+id/ftag_chart_bottom_view_margin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />
    <RelativeLayout

            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp14"
                android:text="@string/Fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_alignParentRight="true"
                android:text="10.23"
                android:id="@+id/tv_chart_bottom_view_fee"
                android:textColor="@color/chart_text_minor"
                android:textSize="@dimen/sp14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />
    <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_chart_bottom_view_transaction"
                android:gravity="center"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                android:background="@drawable/bg_bottom_view_order"
                android:text="BUY 64.22"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
    </LinearLayout>


</LinearLayout>