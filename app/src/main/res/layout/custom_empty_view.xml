<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_empty_data"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_empty_bg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/view_icon_no_data" />

    <TextView
        android:id="@+id/tv_empty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/No_datasss"
        android:textColor="#999999"
        android:textSize="16sp" />
    <Button
        android:layout_marginTop="@dimen/log_bt_log_in_margin_top"
        android:layout_marginLeft="@dimen/input_button_width"
        android:layout_marginRight="@dimen/input_button_width"
        android:background="@drawable/log_bt_log_in_bgs"
        android:id="@+id/tv_btn"
        android:text="@string/do_thing"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>