<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:textSize="@dimen/sp12"
                    android:text="@string/free_margin"
                    android:textColor="@color/chart_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/chart_highlight"
                    android:text="112321"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView

                    android:textSize="@dimen/sp12"
                    android:text="@string/used_margin"
                    android:textColor="@color/chart_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/chart_highlight"
                    android:text="112321"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:textSize="@dimen/sp12"
                    android:text="@string/balance"
                    android:textColor="@color/chart_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/chart_highlight"
                    android:text="112321"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
            app:tabMinWidth="20dp"
            android:id="@+id/tab"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            app:tabTextColor="@color/chart_prompt"
            app:tabIndicatorFullWidth="false"
            android:layout_width="match_parent"
            app:tabIndicatorColor="@color/chart_table_line"
            app:tabSelectedTextColor="@color/chart_table_line"
            app:tabRippleColor="#fff"
            android:layout_height="40dp"
            android:background="@color/white"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paper">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>