<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <RelativeLayout
                android:layout_alignParentLeft="true"
                android:id="@+id/toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left">

            <ImageView
                    android:tint="@color/chart_highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_arrow_back_white_24dp" />
        </RelativeLayout>
        <com.dld.view.SegmentedControlView
               android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:segTextColor="@color/white"
                app:segSelectedTextColor="@color/selected_text_color"
                app:segItemColor="@color/white"
                app:segOuterColor="@color/selected_text_color"
                android:layout_width="200dp"
                android:layout_height="35dp"
                app:segMarginLeft="3dp"
                app:segMarginTop="3dp"
                app:segMode="Round"
                app:segSelectedItem="0"
                android:id="@+id/scv"/>
        </RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/neo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_neo"
                app:siArrowPosition="right"
                app:siBorderWidth="1dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"
                app:siBorderColor="@color/white"
                app:siSquare="true"/>
        <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/chart_highlight"
                android:textSize="@dimen/sp16"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/neo"
                android:layout_centerVertical="true"
                android:text="User999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/chart_prompt"
                    android:text="Performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textStyle="bold"
                    android:textColor="@color/chart_green"
                    android:textSize="@dimen/sp20"
                    android:layout_marginTop="10dp"
                    android:text="+66.66 USD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f5f5f5" />
    <com.pine.populay_options.mvp.model.wigth.NoScrollViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />


</LinearLayout>