<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:id="@+id/img_fprex_item_cover_1"
        android:src="@mipmap/ic_book1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_fprex_item_name"
            android:text="Currency Trading For Dummies"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_fprex_item_author"
            android:text="Written by"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_fprex_item_author1"
            android:lineSpacingExtra="10dp"
            android:text="Kathleen Brooks \n Brian Dolan"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_fprex_item_cover_2"
        android:visibility="gone"
        android:src="@mipmap/ic_book1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
</LinearLayout>

    <View
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>